<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siemens.healthcare.fragments.WaveformFragment">
    <org.lunci.waveform.ui.WaveformGridView
        android:id="@+id/waveformGridView_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <org.lunci.waveform.ui.WaveformView
        android:id="@+id/waveformView_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ZoomControls
        android:id="@+id/zoomControls_vertical_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
